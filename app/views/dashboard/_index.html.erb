<div class="page-header">
    <h1>Dashboard</h1>
</div>

<div class="row-fluid show-grid">
    <div class="span4">
        <h4>Customers</h4>
        <%= link_to customers_path, :remote => true,
            :class => "btn", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-list"></i> View Customers
        <% end %>
        
        <br/>
        <br/>
        <%= link_to new_customer_path, :remote => true,
            :class => "btn btn-primary", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-star icon-white"></i> Add New Customer
        <% end %>
    </div>
    <div class="span4 dashboard-divider">
        <h4>Categories</h4>
        <%= link_to categories_path, :remote => true,
            :class => "btn", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-list"></i> View Categories
        <% end %>
        
        <br/>
        <br/>
        <%= link_to new_category_path, :remote => true,
            :class => "btn btn-primary", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-star icon-white"></i> Add New Category
        <% end %>        
    </div>
    <div class="span3 dashboard-divider">
        <h4>Countries</h4>        
        <%= link_to countries_path, :remote => true,
            :class => "btn", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-list"></i> View Countriess
        <% end %>
        
        <br/>
        <br/>
        <%= link_to new_country_path, :remote => true,
            :class => "btn btn-primary", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-star icon-white"></i> Add New Country
        <% end %> 
    </div>
</div>