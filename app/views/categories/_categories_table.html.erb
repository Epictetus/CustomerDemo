<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th><%= sortable "name", "Name"%></th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td valign="top"> 
                <%= link_to category.name, edit_category_path(category), :remote => true %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_category_path(category), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= category_path(category) %>',
                    'Are you sure you want to delete the category : <%= category.name%>');"> 
                    <i class="icon-remove"></i> 
                </a>
            </td>
        </tr>
        <% end %>

    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"> <%= will_paginate @customers%> </td>
        </tr>
    </tfoot>
</table>
